// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  google_id String    @unique
  products  Product[]
  comments  Comment[]
  Star      Star[]
}

// 2. Define the Product model
model Product {
  id            Int       @id @default(autoincrement())
  title         String
  image         String // You can store the image URL or path here
  description   String
  numberOfVotes Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  userId        Int
  user          User      @relation(fields: [userId], references: [id])
  comments      Comment[]
  stars         Star[]
}

// 3. Define the Comment model
model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
}

// 4. Define the Star model (for rating)
model Star {
  id        Int     @id @default(autoincrement())
  value     Int
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}
